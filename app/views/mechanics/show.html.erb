<h1><%= @mechanic.name %></h1>

<p>Years of Experience: <%= @mechanic.years_experience %></p>

<h2>Rides being worked on:</h2>

<% @mechanic.rides.desc_thrill.open?.each do |ride| %>
  <p><%= ride.name %></p>
<% end %>

<p><%= "Add a ride to #{@mechanic.name}'s schedule." %></p>
<%= form_with url: "/mechanics/#{@mechanic.id}/rides", method: :post, local: true do |form| %>
  <p>
    <%= form.label :ride_id %>
    <%= form.number_field :ride_id %>
  </p>
  <%= form.submit "Submit" %>
<% end %>
